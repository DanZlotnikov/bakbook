

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><center>Log In</center></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body ">
        <br>
          <%= form_for(:session, url: login_path) do |form| %>
            <div class="form-group padded-modal-body">
              <%= form.text_field :email, :class => "form-control", :placeholder => "Email" %>
            </div>
            <div class="form-group  padded-modal-body">
              <%= form.password_field :password, :class => "form-control", :placeholder => "Password" %>
            </div>
            <div class="form-group padded-modal-body" >
              <%= form.submit "Log in", :class => "btn btn-primary btn-block" %>
            </div>
            <div class="clearfix">
              <center><a href="#" class="pull-right">Forgot Password?</a></center>
            </div>
          <% end %>
        <br>
          <p class="text-center">New user? <%= link_to "Sign up now!", new_user_path %></p>
      </div>
    </div>
  </div>
</div>