<section class="details-card">
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card-content card-img-existing card-ilan">
          <center>
            <div class="card-desc">
              <h3>Existing User</h3>
              <br>
              <p>Login to use the full set of professional solutions</p>
              <button class="btn btn-warning my-2 my-sm-0"><%= link_to 'New Auction', new_auction_path, method: :get %></button>
              <button class="btn btn-light my-2 my-sm-0"><%= link_to 'Browse', auctions_path %></button>
            </div>
          </center>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card-content card-img-new card-ilan">
          <center>
            <div class="card-desc">
              <h3> Visitor </h3>
              <br>
              <p>Join now to propel your business forward!</p>
              <button class="btn btn-success my-2 my-sm-0"><%= link_to 'Create User', auctions_path %></button>
              <button class="btn btn-warning my-2 my-sm-0"><%= link_to 'New Auction', new_auction_path %></button>
            </div>
          </center>
        </div>
      </div>
    </div>
  </div>
</section>
