<div>
  <div class="offer-header">
    <h2>New Offer</h2>
  </div>

  <div class="new-offer-box">

    <div class="form-group">
      <%= form_with(model: [@auction, @auction.offers.new], local: true) do |form| %>

        <div class="form-group offer-document">
          <div>
            <label> <strong>Offer Document:</strong> </label>
            <%= form.file_field :offer_document %>
          </div>
        </div>
        <br>

        <%= form.text_area :body, :class => "form-control", :placeholder => "Description" %> <br>
        <% if session[:is_logged] %>
          <%= form.submit :class => "btn btn-block btn-form auction-form-element" %>
        <% end %>


      <% end %>
      <% unless session[:is_logged] %>
        <button onclick="openLoginModal()" class="btn btn-primary"> Login to make an offer!</button>
      <% end %>
    </div>

  </div>

</div>